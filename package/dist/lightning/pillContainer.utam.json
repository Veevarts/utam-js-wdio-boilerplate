{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: lightning-pill-container",
            "Represents the lightning-pill-container Lightning web component.",
            "Get all the pills from the container."
        ]
    },
    "shadow": {
        "elements": [
            {
                "name": "allPills",
                "type": "utam-lightning/pageObjects/pill",
                "selector": {
                    "css": "lightning-pill",
                    "returnAll": true
                },
                "public": true
            },
            {
                "name": "moreButton",
                "nullable": true,
                "type": "clickable",
                "public": true,
                "selector": {
                    "css": ".slds-listbox-toggle .slds-button"
                }
            }
        ]
    },
    "methods": [
        {
            "name": "getAllPillLabels",
            "description": {
                "text": [
                    "Get all the pill labels from the pill container."
                ],
                "return": "string[]"
            },
            "compose": [
                {
                    "element": "allPills",
                    "apply": "getLabelText",
                    "returnType": "string",
                    "returnAll": true
                }
            ]
        },
        {
            "name": "deleteAllPills",
            "description": {
                "text": [
                    "Delete all the selected records from the pill container."
                ],
                "return": "none"
            },
            "compose": [
                {
                    "element": "allPills",
                    "apply": "remove"
                }
            ]
        }
    ]
}