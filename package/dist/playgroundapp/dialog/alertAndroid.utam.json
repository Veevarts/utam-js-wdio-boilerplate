{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: resourceId(\"com.android.permissioncontroller:id/grant_dialog\").",
            "Represents the Android alert view.",
            "Choose an action or get a message from the alert."
        ]
    },
    "implements": "utam-playgroundapp/pageObjects/dialog/alert",
    "root": true,
    "platform": "native",
    "profile": [
        {
            "platform": [
                "android_phone"
            ]
        }
    ],
    "selector": {
        "uiautomator": "resourceId(\"com.android.permissioncontroller:id/grant_dialog\")"
    },
    "methods": [
        {
            "name": "clickButton",
            "compose": [
                {
                    "element": "button",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "hasButton",
            "compose": [
                {
                    "returnType": "boolean",
                    "element": "button",
                    "apply": "isPresent"
                }
            ]
        },
        {
            "name": "getMessages",
            "compose": [
                {
                    "element": "messages",
                    "apply": "getText"
                }
            ]
        }
    ],
    "elements": [
        {
            "name": "button",
            "nullable": true,
            "type": [
                "clickable"
            ],
            "selector": {
                "uiautomator": "className(\"android.widget.Button\").text(\"%s\")",
                "args": [
                    {
                        "name": "label",
                        "type": "string"
                    }
                ]
            }
        },
        {
            "name": "messages",
            "type": [
                "actionable"
            ],
            "selector": {
                "uiautomator": "className(\"android.widget.TextView\").textMatches(\"[a-zA-Z0-9].+\")",
                "returnAll": true
            }
        }
    ]
}