{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: **/XCUIElementTypeOther[`label == \"navigation\"`].",
            "Represents the iOS menu view controller.",
            "Check if a navigation item is present or click on it."
        ]
    },
    "implements": "utam-playgroundapp/pageObjects/navigation/navMenu",
    "root": true,
    "platform": "native",
    "profile": [
        {
            "platform": [
                "ios_phone"
            ]
        }
    ],
    "selector": {
        "classchain": "**/XCUIElementTypeOther[`label == \"navigation\"`]"
    },
    "elements": [
        {
            "name": "navItem",
            "type": [
                "clickable"
            ],
            "selector": {
                "classchain": "**/XCUIElementTypeOther/XCUIElementTypeOther/XCUIElementTypeLink[`label == \"%s\"`]",
                "args": [
                    {
                        "name": "label",
                        "type": "string"
                    }
                ]
            }
        },
        {
            "name": "navItems",
            "type": [
                "clickable"
            ],
            "public": true,
            "selector": {
                "classchain": "**/*[$type == 'XCUIElementTypeLink'$]",
                "returnAll": true
            }
        }
    ],
    "methods": [
        {
            "name": "clickNavItem",
            "compose": [
                {
                    "element": "navItem",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "hasNavItem",
            "compose": [
                {
                    "returnType": "boolean",
                    "element": "root",
                    "apply": "containsElement",
                    "args": [
                        {
                            "type": "locator",
                            "value": {
                                "classchain": "**/XCUIElementTypeOther/XCUIElementTypeOther/XCUIElementTypeLink[`label == \"%s\"`]",
                                "args": [
                                    {
                                        "name": "item",
                                        "type": "string"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ]
}