{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: **/XCUIElementTypeTable[`name == 'mobileHomeTableView'`].",
            "Represents the iOS mobile home cards scrollview.",
            "Verify cards are present or navigate to one."
        ]
    },
    "implements": "utam-salesforceapp/pageObjects/mobilehome/homeCardList",
    "platform": "native",
    "profile": [
        {
            "platform": [
                "ios_phone",
                "ios_tablet"
            ]
        }
    ],
    "exposeRootElement": true,
    "type": [
        "actionable",
        "touchable"
    ],
    "elements": [
        {
            "name": "visibleCardBadges",
            "nullable": true,
            "type": [
                "clickable",
                "actionable"
            ],
            "selector": {
                "classchain": "**/XCUIElementTypeStaticText[`visible == true`]",
                "returnAll": true
            },
            "public": true
        },
        {
            "name": "cardBadgeWithLabel",
            "type": [
                "clickable",
                "actionable",
                "touchable"
            ],
            "nullable": true,
            "selector": {
                "classchain": "**/XCUIElementTypeStaticText[`label == '%s'`]",
                "args": [
                    {
                        "name": "label",
                        "type": "string"
                    }
                ]
            }
        },
        {
            "name": "cardBadgeWithTitle",
            "type": [
                "clickable",
                "actionable",
                "touchable"
            ],
            "nullable": true,
            "selector": {
                "classchain": "**/XCUIElementTypeStaticText[`label == '%s'`]",
                "args": [
                    {
                        "name": "label",
                        "type": "string"
                    }
                ]
            }
        },
        {
            "name": "cardEditButton",
            "type": [
                "clickable",
                "actionable"
            ],
            "nullable": true,
            "selector": {
                "classchain": "**/XCUIElementTypeCell[`name CONTAINS '%s'`]/**/XCUIElementTypeButton[`label == 'Edit'`]",
                "args": [
                    {
                        "name": "cardLabel",
                        "type": "string"
                    }
                ]
            }
        }
    ],
    "methods": [
        {
            "name": "hasCardWithBadgeLabel",
            "compose": [
                {
                    "returnType": "boolean",
                    "element": "cardBadgeWithLabel",
                    "matcher": {
                        "type": "notNull"
                    }
                }
            ]
        },
        {
            "name": "clickCardWithBadgeLabel",
            "compose": [
                {
                    "applyExternal": {
                        "type": "utam-salesforceapp/utils/mobilehome/homeCardListiOSUtils",
                        "invoke": "clickCardBadgeWithLabel",
                        "args": [
                            {
                                "name": "itemLabel",
                                "type": "string"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "scrollToCardWithBadgeLabel",
            "compose": [
                {
                    "returnType": "string",
                    "applyExternal": {
                        "type": "utam-salesforceapp/utils/mobilehome/homeCardListiOSUtils",
                        "invoke": "scrollToElementToGetText",
                        "args": [
                            {
                                "name": "badgeLabel",
                                "type": "string"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "editCardWithBadgeLabel",
            "compose": [
                {
                    "element": "cardEditButton",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "hasCardBadgeWithTitle",
            "compose": [
                {
                    "returnType": "boolean",
                    "element": "cardBadgeWithTitle",
                    "matcher": {
                        "type": "notNull"
                    }
                }
            ]
        }
    ]
}