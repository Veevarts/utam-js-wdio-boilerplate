{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: resourceId(\"com.salesforce.chatter:id/compose_view\").",
            "Represents the Android Briefcase view.",
            "Verify the downloaded objects."
        ]
    },
    "implements": "utam-salesforceapp/pageObjects/offlineapp/briefcase",
    "root": true,
    "exposeRootElement": true,
    "platform": "native",
    "profile": [
        {
            "platform": [
                "android_phone",
                "android_tablet"
            ]
        }
    ],
    "selector": {
        "uiautomator": "resourceId(\"com.salesforce.chatter:id/compose_view\")"
    },
    "beforeLoad": [
        {
            "apply": "waitFor",
            "args": [
                {
                    "type": "function",
                    "predicate": [
                        {
                            "element": "root",
                            "apply": "isPresent"
                        },
                        {
                            "element": "root",
                            "apply": "containsElement",
                            "args": [
                                {
                                    "type": "locator",
                                    "value": {
                                        "uiautomator": "resourceId(\"briefcase_objectsList\")"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "elements": [
        {
            "name": "status",
            "selector": {
                "uiautomator": "resourceId(\"briefcase_status\")"
            }
        },
        {
            "name": "lastUpdate",
            "selector": {
                "uiautomator": "resourceId(\"last_updated_text\")"
            }
        },
        {
            "name": "objectList",
            "public": true,
            "selector": {
                "uiautomator": "resourceId(\"briefcase_objectsList\")"
            },
            "type": "utam-salesforceapp/pageObjects/offlineapp/offlineObjectList"
        },
        {
            "name": "draftSummary",
            "type": "utam-salesforceapp/pageObjects/offlineapp/draftSummary",
            "public": true,
            "selector": {
                "uiautomator": "resourceId(\"draft_status\")"
            }
        },
        {
            "name": "searchField",
            "selector": {
                "uiautomator": "resourceId(\"search_field\")"
            },
            "type": [
                "clickable"
            ]
        }
    ],
    "methods": [
        {
            "name": "getStatus",
            "compose": [
                {
                    "element": "status",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "getLastUpdate",
            "compose": [
                {
                    "element": "lastUpdate",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "hasDraftSummary",
            "compose": [
                {
                    "element": "root",
                    "apply": "containsElement",
                    "args": [
                        {
                            "type": "locator",
                            "value": {
                                "uiautomator": "resourceId(\"draft_status\")"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "hasBriefcaseSearch",
            "compose": [
                {
                    "returnType": "boolean",
                    "element": "searchField",
                    "matcher": {
                        "type": "notNull"
                    }
                }
            ]
        },
        {
            "name": "clickSearch",
            "compose": [
                {
                    "element": "searchField",
                    "apply": "click"
                }
            ]
        }
    ]
}