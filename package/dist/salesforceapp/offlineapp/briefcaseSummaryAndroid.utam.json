{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: briefcase_summary",
            "Represents the Android Briefcase summary view on Landing page.",
            "Verify the briefcase priming summary."
        ]
    },
    "implements": "utam-salesforceapp/pageObjects/offlineapp/briefcaseSummary",
    "platform": "native",
    "profile": [
        {
            "platform": [
                "android_phone",
                "android_tablet"
            ]
        }
    ],
    "exposeRootElement": true,
    "type": [
        "clickable"
    ],
    "elements": [
        {
            "name": "summaryTitle",
            "selector": {
                "uiautomator": "resourceId(\"briefcase_summary_title\")"
            }
        },
        {
            "name": "summaryText",
            "selector": {
                "uiautomator": "resourceId(\"briefcase_summary_text\")"
            }
        },
        {
            "name": "progressRing",
            "nullable": true,
            "selector": {
                "uiautomator": "resourceId(\"briefcase_summary_progress_ring\")"
            }
        },
        {
            "name": "downloadingText",
            "nullable": true,
            "selector": {
                "uiautomator": "className(\"android.widget.TextView\").textContains(\"Downloading\")"
            }
        }
    ],
    "methods": [
        {
            "name": "getSummaryTitle",
            "compose": [
                {
                    "element": "summaryTitle",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "getSummaryText",
            "compose": [
                {
                    "element": "summaryText",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "waitForDownloadToComplete",
            "compose": [
                {
                    "element": "progressRing",
                    "apply": "waitForAbsence"
                },
                {
                    "element": "downloadingText",
                    "apply": "waitForAbsence"
                }
            ]
        },
        {
            "name": "drillIn",
            "compose": [
                {
                    "element": "root",
                    "apply": "click"
                }
            ]
        }
    ]
}