{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: **/XCUIElementTypeNavigationBar.",
            "Represents the iOS  navigation bar at the top of the tab bar view controller.",
            "Access the profile menu, load notifications, search, or toggle favorite."
        ]
    },
    "implements": "utam-salesforceapp/pageObjects/navigation/navBar",
    "root": true,
    "type": [
        "actionable"
    ],
    "platform": "native",
    "profile": [
        {
            "platform": [
                "ios_phone",
                "ios_tablet"
            ]
        }
    ],
    "beforeLoad": [
        {
            "apply": "waitFor",
            "args": [
                {
                    "type": "function",
                    "predicate": [
                        {
                            "element": "root",
                            "apply": "isPresent"
                        }
                    ]
                }
            ]
        }
    ],
    "selector": {
        "classchain": "**/XCUIElementTypeNavigationBar"
    },
    "elements": [
        {
            "name": "profilePhoto",
            "nullable": true,
            "selector": {
                "accessid": "userProfilePhoto"
            },
            "type": [
                "clickable"
            ]
        },
        {
            "name": "titleText",
            "type": [
                "clickable",
                "actionable"
            ],
            "selector": {
                "classchain": "**/XCUIElementTypeStaticText"
            }
        },
        {
            "name": "button",
            "selector": {
                "classchain": "**/XCUIElementTypeButton[`label CONTAINS '%s'`]",
                "args": [
                    {
                        "name": "label",
                        "type": "string"
                    }
                ]
            },
            "type": [
                "clickable"
            ]
        },
        {
            "name": "notificationsButton",
            "selector": {
                "classchain": "**/XCUIElementTypeButton[`name == 'NotificationsButton'`]"
            },
            "type": [
                "clickable"
            ]
        },
        {
            "name": "searchButton",
            "selector": {
                "classchain": "**/XCUIElementTypeButton[`name == 'searchButton'`]"
            },
            "type": [
                "clickable"
            ]
        },
        {
            "name": "newButton",
            "nullable": true,
            "selector": {
                "accessid": "new"
            },
            "type": [
                "clickable"
            ]
        },
        {
            "name": "favoriteButton",
            "nullable": true,
            "selector": {
                "accessid": "favoritesButton"
            },
            "type": [
                "clickable"
            ]
        }
    ],
    "methods": [
        {
            "name": "clickProfile",
            "compose": [
                {
                    "element": "profilePhoto",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "openSearch",
            "compose": [
                {
                    "element": "searchButton",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "getTitleText",
            "compose": [
                {
                    "element": "titleText",
                    "apply": "getText"
                }
            ]
        },
        {
            "name": "openNotifications",
            "compose": [
                {
                    "element": "notificationsButton",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "clickItem",
            "compose": [
                {
                    "element": "button",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "clickNew",
            "compose": [
                {
                    "element": "newButton",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "toggleFavorite",
            "compose": [
                {
                    "element": "favoriteButton",
                    "apply": "click"
                }
            ]
        },
        {
            "name": "waitForIsFavorite",
            "compose": [
                {
                    "element": "root",
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "root",
                                    "apply": "containsElement",
                                    "args": [
                                        {
                                            "type": "locator",
                                            "value": {
                                                "classchain": "**/XCUIElementTypeButton[`name == 'favoritesButton' AND selected == 1`]"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "waitForIsNotFavorite",
            "compose": [
                {
                    "element": "root",
                    "apply": "waitFor",
                    "args": [
                        {
                            "type": "function",
                            "predicate": [
                                {
                                    "element": "root",
                                    "apply": "containsElement",
                                    "args": [
                                        {
                                            "type": "locator",
                                            "value": {
                                                "classchain": "**/XCUIElementTypeButton[`name == 'favoritesButton' AND selected == 0`]"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "openOverflow",
            "compose": [
                {
                    "element": "root",
                    "apply": "focus"
                }
            ]
        }
    ]
}