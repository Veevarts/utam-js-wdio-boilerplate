{
    "description": {
        "author": "Salesforce",
        "text": [
            "Selector: resourceIdMatches(\".*sf__layout_root\").",
            "Represents the Android 'Add Connection' dialog.",
            "Add a new server by name and url."
        ]
    },
    "implements": "utam-salesforceapp/pageObjects/authentication/addConn",
    "root": true,
    "platform": "native",
    "profile": [
        {
            "platform": [
                "android_phone",
                "android_tablet"
            ]
        }
    ],
    "selector": {
        "uiautomator": "resourceIdMatches(\".*sf__layout_root\")"
    },
    "methods": [
        {
            "name": "addConnection",
            "compose": [
                {
                    "element": "name",
                    "apply": "setText",
                    "args": [
                        {
                            "name": "name",
                            "type": "string"
                        }
                    ]
                },
                {
                    "element": "url",
                    "apply": "setText",
                    "args": [
                        {
                            "name": "url",
                            "type": "string"
                        }
                    ]
                },
                {
                    "element": "applyBtn",
                    "apply": "click"
                }
            ]
        }
    ],
    "elements": [
        {
            "name": "name",
            "type": [
                "editable"
            ],
            "selector": {
                "uiautomator": "resourceIdMatches(\".*sf__picker_custom_label\")"
            }
        },
        {
            "name": "url",
            "type": [
                "editable"
            ],
            "selector": {
                "uiautomator": "resourceIdMatches(\".*sf__picker_custom_url\")"
            }
        },
        {
            "name": "applyBtn",
            "type": [
                "clickable"
            ],
            "selector": {
                "uiautomator": "resourceIdMatches(\".*sf__apply_button\")"
            }
        }
    ]
}